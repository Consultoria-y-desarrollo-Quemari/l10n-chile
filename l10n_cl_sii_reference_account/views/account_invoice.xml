    <record id="view_supplier_view_move_form" model="ir.ui.view">
        <field name="name">l10n_cl.invoice.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='payments_info_group']" position="after">
                <separator string="References"/>
                <field name="reference_ids" mode="tree">
                    <form>
                    <field name="name"/>
                    <group>
                        <group>
                            <field name='code'/>
                            <field name='class_id'/>
                        </group>
                        <group>
                            <field name='motive'/>
                            <field name='date'/>
                        </group>
                    </group>
                    </form>
                    <tree>
                        <field name="name" required="True"/>
                        <field name="class_id" required="True"/>
                        <field name="code"/>
                        <field name="motive"/>
                        <field name="date"/>
                    </tree>
                </field>
            </xpath>
        </field>
    </record>

</odoo>
